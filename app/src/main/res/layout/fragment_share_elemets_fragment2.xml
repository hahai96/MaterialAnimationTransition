<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ha_hai.demomaterialanimationtransition.fragment.ShareElementsFragment1">


    <ImageView
        android:id="@+id/imgIconShareElements2"
        style="@style/MaterialAnimations.Icon.Small"
        android:src="@drawable/circle_24dp"
        android:transitionName="@string/share_img_between_two_fragments" />

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Fragment 2"
        android:textSize="22sp"
        android:layout_alignBottom="@id/imgIconShareElements2"
        android:layout_alignTop="@id/imgIconShareElements2"
        android:layout_toEndOf="@id/imgIconShareElements2"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txtTextBody"
        style="@style/MaterialAnimations.Text.Body"
        android:text="Blue circle is a shared element between two fragments"
        android:layout_below="@id/imgIconShareElements2"/>

    <TextView
        android:id="@+id/txtOverLap"
        style="@style/MaterialAnimations.Text.Body"
        android:text="Overlap"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/txtTextBody"/>

    <TextView
        style="@style/MaterialAnimations.Text.Body"
        android:text="When true, the enter transition will start as soon as possible. When false, the enter
                            transition will wait ulti the exit transition completes before starting."
        android:layout_below="@id/txtOverLap"/>

</RelativeLayout>

